@model _19T1021188.Web.Models.CustomerSearchOutput
@{
    Layout = null;
}

<p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.pageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="">
            <tr class="p-3 mb-2 bg-primary text-white">
                <th> Tên khách hàng</th>
                <th> Tên liên hệ</th>
                <th> Địa chỉ</th>
                <th> Thành phố</th>
                <th> Mã bưu chính</th>
                <th> Quốc gia</th>
                <th> Thao tác </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td> @item.CustomerName</td>
                    <td> @item.ContactName</td>
                    <td> @item.Address</td>
                    <td> @item.City</td>
                    <td> @item.PostalCode</td>
                    <td> @item.Country</td>

                    <td class="text-right">
                        <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.pageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

