@model _19T1021188.DomainModels.Employee
@{
   
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.BirthDate)
                    <input type="text" class="form-control" name="birthday" value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)">
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.file[0])" />
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    @if (Model.Photo != null && Model.Photo.Contains("http"))
                    {
                        <img id="Photo" src="@Model.Photo" class="img img-bordered" style="width:200px" />
                    }
                    else if (Model.Photo != null)
                    {
                        <img id="Photo" src="~/@Model.Photo" class="img img-bordered" style="width:200px" />
                    }
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <div class="col-sm-10">
                    @if (Model.Password == null)
                    {
                        <input class="form-control" value="Mật khẩu mặc định được tạo là 1" readonly />
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

